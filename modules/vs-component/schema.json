{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "pcu": {
      "$ref": "#/definitions/pcu"
    },
    "resources": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/resource"
      }
    },
    "controllers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/controller"
      }
    },
    "cells": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/cell"
      }
    },
    "fabric": {
      "$ref": "#/definitions/fabric"
    },
    "interface": {
      "$ref": "#/definitions/interface"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "pcu": {
            "properties": {
              "has_vpi": {
                "const": true
              }
            },
            "required": [
              "has_vpi"
            ]
          }
        }
      },
      "then": {
        "required": [
          "resources",
          "controllers",
          "cells",
          "fabric"
        ]
      }
    }
  ],
  "additionalProperties": false,
  "definitions": {
    "pcu": {
      "type": "object",
      "properties": {
        "has_vpi": {
          "type": "boolean"
        },
        "has_ssm": {
          "type": "boolean"
        }
      }
    },
    "resource": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "size": {
          "type": "integer",
          "minimum": 1
        },
        "word_input_port": {
          "type": "integer",
          "minimum": 0
        },
        "word_output_port": {
          "type": "integer",
          "minimum": 0
        },
        "bulk_input_port": {
          "type": "integer",
          "minimum": 0
        },
        "bulk_output_port": {
          "type": "integer",
          "minimum": 0
        },
        "custom_properties": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "integer",
                "minimum": 0
              }
            },
            "required": [
              "name",
              "value"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "name"
      ]
    },
    "controller": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "size": {
          "type": "integer",
          "minimum": 1
        },
        "iram_size": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "name"
      ]
    },
    "cell": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "controller": {
          "type": "string"
        },
        "resource_list": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name",
        "controller",
        "resource_list"
      ]
    },
    "fabric": {
      "type": "object",
      "properties": {
        "height": {
          "type": "integer"
        },
        "width": {
          "type": "integer"
        },
        "cells_list": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "coordinates": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "row": {
                      "type": "integer",
                      "minimum": 0
                    },
                    "col": {
                      "type": "integer",
                      "minimum": 0
                    }
                  },
                  "required": [
                    "row",
                    "col"
                  ]
                }
              },
              "cell_name": {
                "type": "string"
              }
            },
            "required": [
              "coordinates",
              "cell_name"
            ]
          }
        },
        "custom_properties": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "integer"
              }
            },
            "required": [
              "name",
              "value"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "height",
        "width",
        "cells_list"
      ]
    },
    "interface": {
      "type": "object",
      "properties": {
        "input_buffer_depth": {
          "type": "integer",
          "minimum": 1
        },
        "output_buffer_depth": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": [
        "input_buffer_depth",
        "output_buffer_depth"
      ]
    }
  }
}
