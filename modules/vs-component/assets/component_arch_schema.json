{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "kind": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "resource",
        "controller"
      ]
    },
    "category": {
      "type": "string",
      "enum": [
        "uncategorized",
        "processor",
        "memory",
        "network",
        "system"
      ],
      "default": "uncategorized"
    },
    "size": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "io_input": {
      "type": "boolean",
      "default": false
    },
    "io_output": {
      "type": "boolean",
      "default": false
    },
    "custom_properties": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "value": {
            "type": "number"
          }
        },
        "required": [
          "name",
          "value"
        ],
        "additionalProperties": false
      },
      "default": []
    },
    "required_parameters": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    }
  },
  "required": [
    "kind"
  ]
}
